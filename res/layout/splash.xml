<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/splash_open_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_open_up" />

    <ImageView
        android:id="@+id/splash_open_candy"
        android:layout_width="150.0dip"
        android:layout_height="150.0dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152.0dip"
        android:background="@drawable/splash_open_candy" />

    <TextView
        android:id="@+id/splash_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_open_candy"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="#ffffffff"
        android:textSize="25.0dip" />

</RelativeLayout>