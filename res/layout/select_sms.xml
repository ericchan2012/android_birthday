<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

  <!--    <include layout="@layout/head_nav" android:id="@+id/head"/>-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="72.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/msg_left" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="10.0dip"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/msg_fumu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/msg_fumu_selected" />

                <Button
                    android:id="@+id/msg_laopo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/msg_laopo" />

                <Button
                    android:id="@+id/msg_laogong"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/msg_laogong" />

                <Button
                    android:id="@+id/msg_jiaren"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/msg_jiaren" />

                <Button
                    android:id="@+id/msg_pengyou"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/msg_pengyou" />

                <Button
                    android:id="@+id/msg_zhiyou"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/msg_zhiyou" />

                <Button
                    android:id="@+id/msg_lingdao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/msg_lingdao" />

                <Button
                    android:id="@+id/msg_tongshi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/msg_tongshi" />

                <Button
                    android:id="@+id/msg_tongxue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/msg_tongxue" />
            </LinearLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/msglistview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/msg_bg"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="0.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip" />
    </LinearLayout>

</RelativeLayout>