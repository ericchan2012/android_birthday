<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="StyleBarTitle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="ptr_headerContainer">
        <item name="android:gravity">bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0px</item>
    </style>

    <style name="ptr_header">
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ptr_spinner" parent="@android:style/Widget.ProgressBar.Small.Inverse">
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:paddingRight">25.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ptr_text">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="coupon_theme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:listViewStyle">@style/list_view</item>
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="top_left_button" parent="@android:style/Widget.Button">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/back_button_bg</item>
    </style>

    <style name="top_right_button" parent="@android:style/Widget.Button">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/top_right_button_bg</item>
    </style>

    <style name="header_right_button" parent="@android:style/Widget.Button">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/people</item>
    </style>

    <style name="bottom_radio" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/bottom_radio_button_bg</item>
        <item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableBottom">@null</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableRight">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="top_left_radio" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/top_left_radio_button_bg</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="top_right_radio" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/top_right_radio_button_bg</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_view" parent="@android:style/Widget.ListView">
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="theme_dialog_alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="InfoPopAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/umeng_share_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/umeng_share_popup_exit</item>
    </style>

    <style name="Theme.IOSched" parent="@android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_bg</item>
        <item name="android:paddingLeft">35.0dip</item>
        <item name="android:maxHeight">20.0dip</item>
        <item name="android:textColor">#ff999999</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">5.0dip</item>
    </style>

    <style name="my_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/selector_edittext_bg</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle_bg</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="ToggleButtonStyle" parent="@android:Theme.Black">

        <!-- 告诉Android当创建ToggleButton的时候使用自定义风格 -->
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <!-- 在这里可以添加更多的选项... -->
    </style>

</resources>